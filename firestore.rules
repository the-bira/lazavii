rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Coleção de usuários: cada usuário só pode acessar seu próprio doc
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Coleção de usuários (versão em português)
    match /usuarios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Coleções abertas para usuários autenticados
    match /products/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /produtos/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /sales/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /vendas/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Novas coleções necessárias para a aplicação
    match /fornecedores/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /custos/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /metas/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /logs/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}